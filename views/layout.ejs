            </div>
          </a>
          <h5><%= title %></h5>
          <span>
            <% if (currentUser) { %>
            <a href="/create" class="btn btn-primary"> Nuevo post </a>
            <a href="/log-out" class="btn btn-danger"> Salir </a>
            <% } else {%>
            <a href="/create" class="btn btn-primary disabled"> Nuevo post </a>
            <a href="/log-in" class="btn btn-primary"> Ingresar </a>
            <a href="/sign-up" class="btn btn-success"> Registrarse </a>
            <% } %>
          </span>
        </nav>
        <div class="col-sm-10 TenbyFive mx-auto">
          <%- include(view, {data: data, error: error, title: title}); %>
        </div>
      </div>
    </div>
  </body>
</html>
